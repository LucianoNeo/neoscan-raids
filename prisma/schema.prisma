// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Raid {
  gymId       String
  id          String   @id @default(uuid())
  pokemonName String
  pokemonImg  String
  gym         String
  hourStart   DateTime
  hourEnd     DateTime
  createdAt   DateTime @default(now())
  gymTeam     Int
  lat         String
  lon         String
  raidLevel   Int

  players Players[]
}

model Players {
  raidId      String
  id          String @id @default(uuid())
  username    String
  team        String
  playerLevel Int
  playType    String

  raid Raid @relation(fields: [raidId], references: [id])
}
